<form class="form">
	<legend>Triangle {{shape.dx}}, {{shape.dy}} <small>(dx, dy)</small>	<small><a href="maths/ra_triangles/{{id}}" class="label label-info" data-local="true">edit triangle</a></small></legend>

	<fieldset id="originControls">
		<div class="input-prepend">
			<span class="add-on">x</span><input name='originXInput' type="text" class="input-mini" value="{{origin.x}}" size='4'>
		</div>
		<div class="input-prepend">
			<span class="add-on">y</span><input name='originYInput' type="text" class="input-mini" value="{{origin.y}}" size='4'>
		</div>
		
	</fieldset>

	<fieldset>
		<div class="input-prepend">
			<span class="add-on">scale by</span>
			<input name='scaleInput' type="text" class="input-small" value="3" size='4'>
		</div>
	</fieldset>

	<fieldset>
		<button type="submit" class="btn">Go!</button>
	</fieldset>

</form>